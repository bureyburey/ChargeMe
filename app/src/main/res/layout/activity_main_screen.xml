<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainScreenActivity"
    android:background="@drawable/background_gradient_green"
    >


    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="חיובים"
        android:id="@+id/btn_charge_menu"
        android:onClick="SelectOption"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/ibtn_excel_files_browse"
        android:layout_alignEnd="@+id/ibtn_excel_files_browse"
        android:layout_marginRight="71dp"
        android:layout_marginEnd="71dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="מלאי"
        android:id="@+id/btn_inventory_menu"
        android:onClick="SelectOption"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/ibtn_excel_files_browse"
        android:layout_alignStart="@+id/ibtn_excel_files_browse"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ibtn_excel_files_browse"
        android:src="@drawable/excel_icon"
        android:onClick="SelectOption"
        android:scaleType="centerCrop"
        android:layout_below="@+id/btn_charge_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="נתוני מכירות"
        android:id="@+id/btn_statistics"
        android:onClick="SelectOption"
        android:layout_alignBottom="@+id/btn_inventory_menu"
        android:layout_toRightOf="@+id/btn_inventory_menu"
        android:layout_toEndOf="@+id/btn_inventory_menu" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ארכיון חיובים"
        android:id="@+id/btn_archive_browse"
        android:onClick="SelectOption"
        android:layout_above="@+id/btn_statistics"
        android:layout_toRightOf="@+id/btn_inventory_menu"
        android:layout_toEndOf="@+id/btn_inventory_menu" />

</RelativeLayout>
