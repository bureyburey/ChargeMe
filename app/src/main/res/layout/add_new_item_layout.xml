<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_new_item_name"
        android:hint="שם הפריט"
        android:textDirection="rtl"
        android:cursorVisible="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_new_item_quantity"
        android:hint="כמות"
        android:textDirection="rtl"
        android:ellipsize="end"
        android:cursorVisible="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:gravity="center"
        android:layout_below="@+id/et_new_item_name"
        android:layout_alignLeft="@+id/et_new_item_name"
        android:layout_alignStart="@+id/et_new_item_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/et_new_item_price"
        android:hint="מחיר"
        android:textDirection="rtl"
        android:cursorVisible="true"
        android:textColor="@color/abc_input_method_navigation_guard"
        android:gravity="center"
        android:layout_below="@+id/et_new_item_quantity"
        android:layout_alignLeft="@+id/et_new_item_quantity"
        android:layout_alignStart="@+id/et_new_item_quantity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="₪"
        android:textSize="40dp"
        android:id="@+id/tv_new_shekel_label"
        android:layout_alignBottom="@+id/et_new_item_price"
        android:layout_toLeftOf="@+id/et_new_item_price"
        android:layout_toStartOf="@+id/et_new_item_price" />

</RelativeLayout>